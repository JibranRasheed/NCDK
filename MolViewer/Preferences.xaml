<Window x:Class="NCDK.MolViewer.PreferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NCDK.MolViewer"
        mc:Ignorable="d"
        Title="Preferences" Height="186.556" Width="300" Loaded="Window_Loaded">
    <Grid>
        <CheckBox x:Name="checkShowExplicitMethylGroup" Content="Show Explicit Methyl Group" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top">
        </CheckBox>
        <CheckBox IsChecked="{Binding Path=ShowExplicitHydrogens}" x:Name="checkShowExplicitHydrogens" Content="Show Explicit Hydrogens" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top">
        </CheckBox>
        <CheckBox IsChecked="{Binding Path=CompactAtom}" x:Name="checkCompactAtom" Content="Compact Atom" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Left" Margin="127,0,0,9.667" VerticalAlignment="Bottom" Width="75" Click="buttonOK_Click"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,11.333,9.667" VerticalAlignment="Bottom" Width="75"/>

    </Grid>
</Window>
